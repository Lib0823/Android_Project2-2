<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_blue"
    tools:context=".RecordActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="러닝기록"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:textSize="10pt"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:background="@color/bg_blue"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:textSize="6pt"
                android:layout_margin="5dp"
                android:background="@drawable/radius_back4_white"
                android:elevation="7dp"
                android:textColor="@color/black"
                android:text="Null"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:textSize="6pt"
                android:layout_margin="5dp"
                android:background="@drawable/radius_back4_white"
                android:elevation="7dp"
                android:textColor="@color/black"
                android:text="Null"/>

            <Button
                android:id="@+id/btn3"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:textSize="6pt"
                android:layout_margin="5dp"
                android:background="@drawable/radius_back4_white"
                android:elevation="7dp"
                android:textColor="@color/black"
                android:text="Null"/>

            <Button
                android:id="@+id/btn4"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:textSize="6pt"
                android:layout_margin="5dp"
                android:background="@drawable/radius_back4_white"
                android:elevation="7dp"
                android:textColor="@color/black"
                android:text="Null"/>

            <Button
                android:id="@+id/btn5"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:textSize="6pt"
                android:layout_margin="5dp"
                android:background="@drawable/radius_back4_white"
                android:elevation="7dp"
                android:textColor="@color/black"
                android:text="Null"/>

            <Button
                android:id="@+id/btn6"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:textSize="6pt"
                android:layout_margin="5dp"
                android:background="@drawable/radius_back4_white"
                android:elevation="7dp"
                android:textColor="@color/black"
                android:text="Null"/>

            <Button
                android:id="@+id/btn7"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:textSize="6pt"
                android:layout_margin="5dp"
                android:background="@drawable/radius_back4_white"
                android:elevation="7dp"
                android:textColor="@color/black"
                android:text="Null"/>

            <Button
                android:id="@+id/btn8"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:textSize="6pt"
                android:layout_margin="5dp"
                android:background="@drawable/radius_back4_white"
                android:elevation="7dp"
                android:textColor="@color/black"
                android:text="Null"/>

            <Button
                android:id="@+id/btn9"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:textSize="6pt"
                android:layout_margin="5dp"
                android:background="@drawable/radius_back4_white"
                android:elevation="7dp"
                android:textColor="@color/black"
                android:text="Null"/>

            <Button
                android:id="@+id/btn10"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:textSize="6pt"
                android:layout_margin="5dp"
                android:background="@drawable/radius_back4_white"
                android:elevation="7dp"
                android:textColor="@color/black"
                android:text="Null"/>

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/radius_background_double">

        <TextView
            android:id="@+id/dateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00월 00일"
            android:textColor="#ff7f00"
            android:textSize="10pt"
            android:layout_margin="20dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:text="운동 시간"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ProgressBar
                android:id="@+id/timePro"
                android:layout_width="300dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:max="100"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progressTint="#619bfc"
                android:progressBackgroundTint="#dfe8f2"/>
            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:layout_marginLeft="10dp"
                android:text="0분"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:text="운동 거리"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ProgressBar
                android:id="@+id/distancePro"
                android:layout_width="300dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:max="100"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progressTint="#619bfc"
                android:progressBackgroundTint="#dfe8f2"/>
            <TextView
                android:id="@+id/distanceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:layout_marginLeft="10dp"
                android:text="0km"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:text="걸음 수"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ProgressBar
                android:id="@+id/stepPro"
                android:layout_width="300dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:max="100"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progressTint="#619bfc"
                android:progressBackgroundTint="#dfe8f2"/>
            <TextView
                android:id="@+id/stepText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:layout_marginLeft="10dp"
                android:text="0걸음"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:text="소모 칼로리"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ProgressBar
                android:id="@+id/kcalPro"
                android:layout_width="300dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:max="100"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progressTint="#619bfc"
                android:progressBackgroundTint="#dfe8f2"/>
            <TextView
                android:id="@+id/kcalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:layout_marginLeft="10dp"
                android:text="0kcal"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>